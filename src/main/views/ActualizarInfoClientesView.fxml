<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns="http://javafx.com/javafx/24.0.1"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="main.controllers.ActualizarInfoClientesController"
          hgap="20" vgap="15"
          style="-fx-padding: 30;">

    <ComboBox fx:id="tipoIdentificacionCombo" promptText="Tipo de Identificación" GridPane.rowIndex="0" GridPane.columnIndex="0" />
    <TextField fx:id="identificadorField" promptText="Identificador Empresarial" GridPane.rowIndex="0" GridPane.columnIndex="1" />

    <TextField fx:id="nombresField" promptText="Nombre" GridPane.rowIndex="1" GridPane.columnIndex="0" />
    <TextField fx:id="direccionField" promptText="Dirección" GridPane.rowIndex="1" GridPane.columnIndex="1" />

    <TextField fx:id="telefonoField" promptText="Teléfono" GridPane.rowIndex="2" GridPane.columnIndex="0" />
    <TextField fx:id="correoField" promptText="Correo Electrónico" GridPane.rowIndex="2" GridPane.columnIndex="1" />

    <Button text="Actualizar" onAction="#actualizarCliente" GridPane.rowIndex="3" GridPane.columnIndex="0" maxWidth="Infinity" />
    <Button text="Cancelar" onAction="#cerrarVentana" GridPane.rowIndex="3" GridPane.columnIndex="1" maxWidth="Infinity" />

</GridPane>
