<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controllers.ClientesController">

    <top>
        <HBox alignment="CENTER_LEFT" style="-fx-padding: 10 20;">
            <Button onAction="#volverMenu" text="← Volver al Menú" />
        </HBox>
    </top>

    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-padding: 10;">
            <VBox alignment="TOP_CENTER" spacing="20" style="-fx-padding: 30; -fx-max-width: 1100;">
                <HBox alignment="CENTER" maxWidth="Infinity" spacing="20">
                    <ComboBox fx:id="tipoIdentificacionCombo" prefWidth="318.0" promptText="Tipo de Identificación" HBox.hgrow="ALWAYS" />
                    <TextField fx:id="identificadorField" prefWidth="318.0" promptText="Identificador Empresarial" HBox.hgrow="ALWAYS" />
                    <TextField fx:id="nombresField" prefWidth="318.0" promptText="Nombre" HBox.hgrow="ALWAYS" />
                </HBox>
                <HBox alignment="CENTER" maxWidth="Infinity" spacing="20">
                    <TextField fx:id="direccionField" prefWidth="318.0" promptText="Dirección" HBox.hgrow="ALWAYS" />
                    <TextField fx:id="telefonoField" prefWidth="318.0" promptText="Teléfono" HBox.hgrow="ALWAYS" />
                    <TextField fx:id="correoField" prefWidth="318.0" promptText="Correo Electrónico" HBox.hgrow="ALWAYS" />
                </HBox>
                <HBox alignment="CENTER" maxWidth="Infinity" spacing="20">
                    <AnchorPane prefHeight="0.0" prefWidth="318.0">
                        <children>
                            <Button maxWidth="300.0" onAction="#registrarCliente" prefHeight="27.0" prefWidth="318.0" text="Registrar Cliente" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                        </children>
                    </AnchorPane>
                    <Button maxWidth="300.0" onAction="#consultarCliente" prefHeight="27.0" prefWidth="401.0" text="Consultar Cliente" />
                    <Button maxWidth="445.0" onAction="#actualizarInfoCliente" prefHeight="27.0" prefWidth="318.0" text="Actualizar información" />
                    <Button maxWidth="300.0" onAction="#actualizarEstadoCliente" prefHeight="27.0" prefWidth="318.0" text="Actualizar Estado" />
                </HBox>
                <HBox alignment="CENTER" maxWidth="Infinity" />
                <TableView fx:id="tablaClientes" maxHeight="Infinity" maxWidth="Infinity" prefHeight="400" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn text="Identificador" />
                        <TableColumn text="Nombre" />
                        <TableColumn text="Dirección" />
                        <TableColumn text="Teléfono" />
                        <TableColumn text="Correo" />
                    </columns>
                </TableView>
            </VBox>
        </ScrollPane>
    </center>

</BorderPane>
