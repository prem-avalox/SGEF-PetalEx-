<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="800.0" prefWidth="1200.0"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="main.controllers.VentasController">

    <top>
        <HBox alignment="CENTER_LEFT" style="-fx-padding: 10 20;">
            <Button maxWidth="Infinity" onAction="#volverMenu" text="← Volver al Menú" />
        </HBox>
    </top>

    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-padding: 10;">
            <VBox alignment="TOP_CENTER" spacing="20" style="-fx-padding: 30; -fx-max-width: 1100;">
                <HBox alignment="CENTER" maxWidth="Infinity" spacing="20">
                    <TextField fx:id="ordenField" promptText="Número de Orden" minWidth="318.0" prefWidth="318.0" HBox.hgrow="ALWAYS" />
                    <TextField fx:id="fechaField" promptText="Fecha" prefWidth="318.0" HBox.hgrow="ALWAYS" />
                    <TextField fx:id="codigoField" promptText="Código Producto" prefWidth="318.0" HBox.hgrow="ALWAYS" />
                </HBox>
                <HBox alignment="CENTER" maxWidth="Infinity" spacing="20">
                    <TextField fx:id="nombreProdField" promptText="Nombre Producto" prefWidth="318.0" HBox.hgrow="ALWAYS" />
                    <TextField fx:id="precioField" promptText="Precio Unitario" prefWidth="318.0" HBox.hgrow="ALWAYS" />
                    <TextField fx:id="cantidadField" promptText="Cantidad" prefWidth="318.0" HBox.hgrow="ALWAYS" />
                </HBox>
                <HBox alignment="CENTER" maxWidth="Infinity" spacing="20">
                    <TextField fx:id="pagoField" promptText="Método de Pago" prefWidth="318.0" HBox.hgrow="ALWAYS" />
                    <TextField fx:id="estadoField" promptText="Estado" prefWidth="318.0" HBox.hgrow="ALWAYS" />
                    <TextField fx:id="usuarioField" promptText="Usuario" prefWidth="318.0" HBox.hgrow="ALWAYS" />
                </HBox>
                <HBox alignment="CENTER" maxWidth="Infinity" spacing="20">
                    <TextField fx:id="subtotalField" promptText="Subtotal" prefWidth="318.0" HBox.hgrow="ALWAYS" />
                    <TextField fx:id="ivaField" promptText="IVA" prefWidth="318.0" HBox.hgrow="ALWAYS" />
                    <TextField fx:id="totalField" promptText="Total" prefWidth="318.0" HBox.hgrow="ALWAYS" />
                </HBox>
                <HBox alignment="CENTER" spacing="20.0">
                    <Button maxWidth="318.0" onAction="#registrarVenta" prefWidth="318.0" text="Registrar Venta" />
                    <Button maxWidth="318.0" onAction="#consultarVenta" prefWidth="318.0" text="Consultar Venta" />
                    <Button maxWidth="318.0" onAction="#anularVenta" prefWidth="318.0" text="Anular Venta" />
                </HBox>
                <TableView fx:id="tablaVentas" maxHeight="Infinity" maxWidth="Infinity" prefHeight="400" VBox.vgrow="ALWAYS">
                    <columns>
                           <TableColumn text="Orden" />
                            <TableColumn text="Fecha" />
                            <TableColumn text="Código Producto" />
                            <TableColumn text="Nombre Producto" />
                            <TableColumn text="Precio Unitario" />
                            <TableColumn text="Cantidad" />
                            <TableColumn text="Método de Pago" />
                            <TableColumn text="Estado" />
                            <TableColumn text="Usuario" />
                            <TableColumn text="Subtotal" />
                            <TableColumn text="IVA" />
                            <TableColumn text="Total" />
                    </columns>
                </TableView>
            </VBox>
        </ScrollPane>
    </center>

</BorderPane>
