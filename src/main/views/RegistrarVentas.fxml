<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>

<GridPane hgap="20" vgap="15" xmlns="http://javafx.com/javafx/24.0.1"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="main.controllers.RegistrarVentasController"
    style="-fx-padding: 30;">

    <TextField fx:id="ordenField" promptText="Número de Orden" GridPane.rowIndex="0"
        GridPane.columnIndex="0" />
    <TextField fx:id="fechaField" promptText="Fecha" GridPane.rowIndex="0" GridPane.columnIndex="1" />
    <TextField fx:id="codigoField" promptText="Código Producto" GridPane.rowIndex="1"
        GridPane.columnIndex="0" />
    <TextField fx:id="nombreProdField" promptText="Nombre Producto" GridPane.rowIndex="1"
        GridPane.columnIndex="1" />
    <TextField fx:id="precioField" promptText="Precio Unitario" GridPane.rowIndex="2"
        GridPane.columnIndex="0" />
    <TextField fx:id="cantidadField" promptText="Cantidad" GridPane.rowIndex="2"
        GridPane.columnIndex="1" />
    <TextField fx:id="pagoField" promptText="Método de Pago" GridPane.rowIndex="3"
        GridPane.columnIndex="0" />
    <TextField fx:id="estadoField" promptText="Estado" GridPane.rowIndex="3"
        GridPane.columnIndex="1" />
    <TextField fx:id="usuarioField" promptText="Usuario" GridPane.rowIndex="4"
        GridPane.columnIndex="0" />
    <TextField fx:id="subtotalField" promptText="Subtotal" GridPane.rowIndex="4"
        GridPane.columnIndex="1" />
    <TextField fx:id="ivaField" promptText="IVA" GridPane.rowIndex="5" GridPane.columnIndex="0" />
    <TextField fx:id="totalField" promptText="Total" GridPane.rowIndex="5" GridPane.columnIndex="1" />

    <Button text="Registrar" onAction="#guardarVenta" GridPane.rowIndex="6" GridPane.columnIndex="0"
        maxWidth="Infinity" />
    <Button text="Cancelar" onAction="#cerrarVentana" GridPane.rowIndex="6" GridPane.columnIndex="1"
        maxWidth="Infinity" />

</GridPane>