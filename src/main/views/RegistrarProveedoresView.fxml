<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns="http://javafx.com/javafx/24.0.1"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="main.controllers.RegistrarProveedoresController"
          hgap="20" vgap="15"
          style="-fx-padding: 30;">

    <TextField fx:id="rucField" promptText="RUC" GridPane.rowIndex="0" GridPane.columnIndex="0" />
    <TextField fx:id="nombreField" promptText="Nombre del Proveedor" GridPane.rowIndex="0" GridPane.columnIndex="1" />

    <TextField fx:id="telefonoField" promptText="Teléfono" GridPane.rowIndex="1" GridPane.columnIndex="0" />
    <TextField fx:id="direccionField" promptText="Dirección" GridPane.rowIndex="1" GridPane.columnIndex="1" />

    <ComboBox fx:id="estadoCombo" promptText="Estado" GridPane.rowIndex="2" GridPane.columnIndex="0" />

    <Button text="Registrar" onAction="#registrarProveedor" GridPane.rowIndex="3" GridPane.columnIndex="0" maxWidth="Infinity" />
    <Button text="Cancelar" onAction="#cerrarVentana" GridPane.rowIndex="3" GridPane.columnIndex="1" maxWidth="Infinity" />

</GridPane>
