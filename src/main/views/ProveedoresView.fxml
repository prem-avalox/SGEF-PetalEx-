<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/23.0.1"
    xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controllers.ProveedoresController">

    <top>
        <HBox alignment="CENTER_LEFT" style="-fx-padding: 10 20;">
            <Button onAction="#volverMenu" text="← Volver al Menú" />
        </HBox>
    </top>

    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-padding: 10;">
            <VBox alignment="TOP_CENTER" spacing="20" style="-fx-padding: 30; -fx-max-width: 1100;">
                <HBox alignment="CENTER" spacing="20">
                    <TextField fx:id="rucField" maxWidth="318.0" prefWidth="318.0" promptText="RUC"
                        HBox.hgrow="ALWAYS" />
                    <TextField fx:id="nombreField" maxWidth="318.0" prefWidth="318.0"
                        promptText="Nombre del Proveedor" HBox.hgrow="ALWAYS" />
                    <TextField fx:id="telefonoField" maxWidth="318.0" prefWidth="318.0"
                        promptText="Teléfono" HBox.hgrow="ALWAYS" />
                </HBox>
                <HBox alignment="CENTER" prefHeight="59.0" prefWidth="1040.0" spacing="20">
                    <TextField fx:id="direccionField" maxWidth="318.0" prefWidth="318.0"
                        promptText="Dirección" HBox.hgrow="ALWAYS" />
                    <ComboBox fx:id="estadoVentaCombo" prefWidth="318.0"
                        promptText="Estado de Venta" HBox.hgrow="ALWAYS" />
                    <Pane prefHeight="200.0" prefWidth="318.0" />
                </HBox>
                <HBox alignment="CENTER" spacing="20.0">
                    <Button maxWidth="300" onAction="#registrarProveedor" prefWidth="318.0"
                        text="Registrar Proveedor" />
                    <Button maxWidth="300" onAction="#consultarProveedor" prefWidth="318.0"
                        text="Consultar Proveedor" />
                    <Button maxWidth="300" onAction="#actualizarProveedor" prefWidth="318.0"
                        text="Actualizar Proveedor" />
                    <Button maxWidth="300" onAction="#actualizarEstadoProveedor" prefWidth="318.0"
                        text="Actualizar Estado" />
                </HBox>
                <TableView fx:id="tablaProveedores" maxHeight="Infinity" maxWidth="Infinity"
                    prefHeight="400" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn text="RUC" />
                        <TableColumn text="Nombre" />
                        <TableColumn text="Teléfono" />
                        <TableColumn text="Dirección" />
                        <TableColumn text="Estado" />
                    </columns>
                </TableView>
            </VBox>
        </ScrollPane>
    </center>

</BorderPane>