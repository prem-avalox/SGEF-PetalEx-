<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="main.controllers.LoginController"
            prefWidth="400" prefHeight="500">

    <VBox spacing="20" alignment="CENTER"
          AnchorPane.topAnchor="100"
          AnchorPane.leftAnchor="50"
          AnchorPane.rightAnchor="50">

        <Label text="Inicio de Sesión" />

        <TextField fx:id="usuarioField" promptText="Usuario" prefWidth="250" />
        <PasswordField fx:id="contrasenaField" promptText="Contraseña" prefWidth="250" />

        <Button text="Ingresar"
                onAction="#handleLogin"
                prefWidth="150" />

        <Label fx:id="errorLabel"
               text="Credenciales incorrectas"
               visible="false" />

    </VBox>
</AnchorPane>
