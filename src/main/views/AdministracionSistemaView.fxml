<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/24.0.1"
    xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controllers.AdminController">

    <top>
        <HBox alignment="CENTER_LEFT" style="-fx-padding: 10 20;">
            <Button onAction="#volverMenu" text="← Volver al Menú" />
        </HBox>
    </top>

    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-padding: 10;">
            <VBox alignment="TOP_CENTER" spacing="20" style="-fx-padding: 30; -fx-max-width: 1100;">
                <HBox alignment="CENTER" maxWidth="Infinity" spacing="20">
                    <ComboBox fx:id="rolComboBox" maxWidth="335.0" prefHeight="42.0"
                        prefWidth="332.0" promptText="Rol" HBox.hgrow="ALWAYS" />
                    <TextField fx:id="nombreField" promptText="Nombre" maxWidth="1e9"
                        HBox.hgrow="ALWAYS" />
                    <TextField fx:id="apellidoField" promptText="Apellido" maxWidth="1e9"
                        HBox.hgrow="ALWAYS" />
                </HBox>
                <HBox alignment="CENTER" maxWidth="Infinity" spacing="20">
                    <TextField fx:id="cedulaField" promptText="Cédula" maxWidth="1e9"
                        HBox.hgrow="ALWAYS" />
                    <TextField fx:id="correoField" promptText="Correo" maxWidth="1e9"
                        HBox.hgrow="ALWAYS" />
                    <TextField fx:id="contrasenaField" promptText="Contraseña" maxWidth="1e9"
                        HBox.hgrow="ALWAYS" />
                </HBox>
                <HBox alignment="CENTER" maxWidth="Infinity" spacing="20.0">
                    <Button maxWidth="300" onAction="#crearUsuario" prefWidth="318.0"
                        text="Crear Usuario" />
                    <Button maxWidth="300" onAction="#consultarUsuario" prefWidth="318.0"
                        text="Consultar Usuario" />
                    <Button maxWidth="300" onAction="#actualizarUsuario" prefWidth="318.0"
                        text="Actualizar Usuario" />
                    <Button maxWidth="300" onAction="#inactivarUsuario" prefWidth="318.0"
                        text="Inactivar Usuario" />
                </HBox>
                <TableView fx:id="tablaUsuarios" maxHeight="Infinity" maxWidth="Infinity"
                    prefHeight="400" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn text="Nombre" />
                        <TableColumn text="Apellido" />
                        <TableColumn text="Correo" />
                        <TableColumn text="Rol" />
                        <TableColumn text="Cédula" />
                        <TableColumn text="Estado" />
                    </columns>
                </TableView>
            </VBox>
        </ScrollPane>
    </center>

</BorderPane>