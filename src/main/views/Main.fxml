<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controllers.MainController">

    <top>
        <VBox alignment="CENTER">
            <Text text="Sistema de Gestión de Exportación de Flores" style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-padding: 120 0 30 0;" />
        </VBox>
    </top>

    <center>
        <VBox alignment="CENTER">
            <HBox spacing="30" alignment="CENTER">
                <Button onAction="#openClientes" text="Clientes" prefWidth="190" style="-fx-font-size: 22px;" />
                <Button onAction="#openVentas" text="Ventas" prefWidth="190" style="-fx-font-size: 22px;" />
                <Button onAction="#openProveedores" text="Proveedores" prefWidth="190" style="-fx-font-size: 22px;" />
                <Button onAction="#openInventario" text="Inventario" prefWidth="190" style="-fx-font-size: 22px;" />
                <Button onAction="#openAdmin" text="Administración" prefWidth="190" style="-fx-font-size: 22px;" />
            </HBox>
        </VBox>
    </center>

    <bottom>
        <StackPane fx:id="mainContent" prefHeight="0.0" prefWidth="0.0" />
    </bottom>

</BorderPane>